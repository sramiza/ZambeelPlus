@page "/enroll/{StudentId:int}/shopping-cart"
@using ZambeelApp.Services
@using ZambeelApp.Models
@inject IZambeelService SP_Service
@inject Service_LINQ LINQ_Service
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2> Spring 2026 Course Registration</h2>
                <button class="btn btn-secondary" @onclick="GoBack">← Back to Enrollment</button>
            </div>
        </div>
    </div>

    <div class="alert alert-success">
        <strong>Registration Period:</strong> Spring 2026 | Student ID: @StudentId
    </div>

    <div class="alert alert-info">
        <label>
            <input type="checkbox" @bind="useLinq" @bind:after="OnLinqToggleChanged" /> 
            <strong>Use LINQ Implementation?</strong> (Current: @(useLinq ? "LINQ" : "Stored Procedures"))
        </label>
    </div>

    <div class="row">
        <!-- School Selection -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5>Select School</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label"><strong>School:</strong></label>
                        <select class="form-select" @bind="selectedSchoolId" @bind:after="LoadCoursesForSchool">
                            <option value="0">-- Select a School --</option>
                            @foreach (var school in schools)
                            {
                                <option value="@school.SchoolId">@school.Name</option>
                            }
                        </select>
                    </div>

                    @if (selectedSchoolId > 0)
                    {
                        <div class="alert alert-light">
                            <small>
                                <strong>Legend:</strong><br/>
                                <span class="badge bg-success">✓</span> Prerequisites met - can enroll<br/>
                                <span class="badge bg-danger">✗</span> Prerequisites not met
                            </small>
                        </div>
                    }
                </div>
            </div>

            <!-- Selected Courses Cart -->
            @if (selectedCourses.Any())
            {
                <div class="card mt-4">
                    <div class="card-header bg-success text-white">
                        <h5>Your Cart (@selectedCourses.Count/5)</h5>
                    </div>
                    @if (selectedCourses.Count >= 5)
                    {
                        <div class="alert alert-warning mb-0">
                            <small>Maximum 5 courses allowed</small>
                        </div>
                    }
                    <div class="card-body">
                        <ul class="list-group">
                            @foreach (var selected in selectedCourses)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>@selected.Value</span>
                                    <button class="btn btn-sm btn-danger" @onclick="@(() => RemoveCourse(selected.Key))">×</button>
                                </li>
                            }
                        </ul>
                        <div class="mt-3">
                            <button class="btn btn-success w-100" @onclick="EnrollInCourses">
                                ✓ Confirm Enrollment
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Available Courses -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5>Available Courses @(selectedSchoolId > 0 ? $"- {GetSchoolName()}" : "")</h5>
                </div>
                <div class="card-body">
                    @if (selectedSchoolId == 0)
                    {
                        <div class="alert alert-info">Please select a school to view available courses.</div>
                    }
                    else if (availableCourses.Any())
                    {
                        <table class="table table-striped table-hover table-sm">
                            <thead>
                                <tr>
                                    <th>Course</th>
                                    <th>Credits</th>
                                    <th>Professor</th>
                                    <th>Timings</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var course in availableCourses)
                                {
                                    <tr class="@(course.PreReqMet ? "" : "table-secondary")">
                                        <td>
                                            <strong>@course.CourseName</strong>
                                            <br/><small class="text-muted">@course.DepartmentName</small>
                                        </td>
                                        <td>@course.CreditHours</td>
                                        <td>@course.ProfessorName</td>
                                        <td><small>@course.Timings</small></td>
                                        <td>
                                            @if (course.PreReqMet)
                                            {
                                                <span class="badge bg-success">✓ Eligible</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger" title="Requires: @course.PreReqCourseName">
                                                    ✗ Needs: @course.PreReqCourseName
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            @if (course.PreReqMet)
                                            {
                                                var hasClash = HasTimeClash(course.CourseId);
                                                var isAtLimit = selectedCourses.Count >= 5 && !selectedCourses.ContainsKey(course.CourseId);
                                                var isDisabled = hasClash || isAtLimit;
                                                
                                                <div class="form-check">
                                                    <input 
                                                        class="form-check-input" 
                                                        type="checkbox" 
                                                        id="course_@course.CourseId"
                                                        checked="@selectedCourses.ContainsKey(course.CourseId)"
                                                        disabled="@isDisabled"
                                                        @onchange="@((e) => ToggleCourse(course.CourseId, course.CourseName, (bool)e.Value!))" />
                                                    @if (hasClash || isAtLimit)
                                                    {
                                                        <label class="form-check-label ms-2" for="course_@course.CourseId">
                                                            @if (hasClash)
                                                            {
                                                                <small class="text-danger">Time Clash</small>
                                                            }
                                                            else if (isAtLimit)
                                                            {
                                                                <small class="text-warning">Limit Reached</small>
                                                            }
                                                        </label>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Locked</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-warning">No courses available for this school.</div>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="mt-3 alert @(isError ? "alert-danger" : "alert-success")">
            @message
        </div>
    }
</div>

@code {
    [Parameter]
    public int StudentId { get; set; }

    private List<SchoolBasicDTO> schools = new();
    private List<AvailableCourseDTO> availableCourses = new();
    private Dictionary<int, string> selectedCourses = new();
    private Dictionary<int, List<TimetableSlotDTO>> courseTimetables = new();
    private int selectedSchoolId = 0;
    private bool useLinq = false;
    private string message = "";
    private bool isError = false;
    private const int MAX_COURSES = 5;

    protected override void OnInitialized()
    {
        LoadSchools();
    }

    private void LoadSchools()
    {
        try
        {
            IZambeelService activeService = useLinq ? (IZambeelService)LINQ_Service : SP_Service;
            schools = activeService.GetAllSchools();
        }
        catch (Exception ex)
        {
            isError = true;
            message = $"Error loading schools: {ex.Message}";
        }
    }

    private void LoadCoursesForSchool()
    {
        if (selectedSchoolId == 0)
        {
            availableCourses = new List<AvailableCourseDTO>();
            return;
        }

        try
        {
            IZambeelService activeService = useLinq ? (IZambeelService)LINQ_Service : SP_Service;
            availableCourses = activeService.GetAvailableCoursesForStudent(StudentId, selectedSchoolId);
            
            // Load timetables for all courses
            LoadCourseTimetables();
            
            message = "";
        }
        catch (Exception ex)
        {
            isError = true;
            message = $"Error loading courses: {ex.Message}";
            availableCourses = new List<AvailableCourseDTO>();
        }
    }

    private void LoadCourseTimetables()
    {
        try
        {
            IZambeelService activeService = useLinq ? (IZambeelService)LINQ_Service : SP_Service;
            var courseIds = availableCourses.Select(c => c.CourseId).ToList();
            courseTimetables = activeService.GetCourseTimetables(courseIds);
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading timetables: {ex.Message}");
            courseTimetables = new Dictionary<int, List<TimetableSlotDTO>>();
        }
    }

    private void OnLinqToggleChanged()
    {
        LoadSchools();
        if (selectedSchoolId > 0)
        {
            LoadCoursesForSchool();
        }
    }

    private string GetSchoolName()
    {
        return schools.FirstOrDefault(s => s.SchoolId == selectedSchoolId)?.Name ?? "";
    }

    private void ToggleCourse(int courseId, string? courseName, bool isChecked)
    {
        var name = courseName ?? "Unknown Course";
        
        if (isChecked)
        {
            // Adding course
            if (selectedCourses.Count >= MAX_COURSES)
            {
                message = $"Cannot add '{name}'. Maximum {MAX_COURSES} courses allowed.";
                isError = true;
                return;
            }
            
            if (HasTimeClash(courseId))
            {
                message = $"Cannot add '{name}'. Time clash with selected courses.";
                isError = true;
                return;
            }
            
            selectedCourses[courseId] = name;
            message = $"'{name}' added to cart.";
            isError = false;
        }
        else
        {
            // Removing course
            if (selectedCourses.Remove(courseId))
            {
                message = $"'{name}' removed from cart.";
                isError = false;
            }
        }
    }
    
    private bool HasTimeClash(int courseId)
    {
        // Only check for clash if there are already selected courses
        if (selectedCourses.Count == 0)
        {
            return false;
        }
        
        // Don't check clash for already selected courses
        if (selectedCourses.ContainsKey(courseId))
        {
            return false;
        }
        
        if (!courseTimetables.ContainsKey(courseId))
        {
            return false; // No timetable = no clash
        }
        
        var newCourseSlots = courseTimetables[courseId];
        
        foreach (var selectedCourseId in selectedCourses.Keys)
        {
            if (!courseTimetables.ContainsKey(selectedCourseId))
                continue;
            
            var existingSlots = courseTimetables[selectedCourseId];
            
            // Check for clash between any slots
            foreach (var newSlot in newCourseSlots)
            {
                foreach (var existingSlot in existingSlots)
                {
                    if (newSlot.Day == existingSlot.Day &&
                        newSlot.SlotStart.HasValue && newSlot.SlotEnd.HasValue &&
                        existingSlot.SlotStart.HasValue && existingSlot.SlotEnd.HasValue)
                    {
                        // Check for time overlap
                        if (newSlot.SlotStart < existingSlot.SlotEnd &&
                            existingSlot.SlotStart < newSlot.SlotEnd)
                        {
                            return true; // Clash detected
                        }
                    }
                }
            }
        }
        
        return false;
    }

    private void RemoveCourse(int courseId)
    {
        if (selectedCourses.Remove(courseId))
        {
            message = "Course removed from cart.";
            isError = false;
        }
    }

    private void EnrollInCourses()
    {
        if (!selectedCourses.Any())
        {
            message = "Please select at least one course.";
            isError = true;
            return;
        }

        try
        {
            IZambeelService activeService = useLinq ? (IZambeelService)LINQ_Service : SP_Service;
            int successCount = 0;
            List<string> errors = new();

            foreach (var course in selectedCourses)
            {
                var result = activeService.EnrollStudent(StudentId, course.Key, "Spring 2026");
                if (result.StartsWith("Success"))
                {
                    successCount++;
                }
                else
                {
                    errors.Add($"{course.Value}: {result}");
                }
            }

            if (successCount > 0 && errors.Count == 0)
            {
                message = $"Successfully enrolled in {successCount} course(s) for Spring 2026!";
                isError = false;
                selectedCourses.Clear();
                // Reload courses to reflect changes
                if (selectedSchoolId > 0)
                {
                    LoadCoursesForSchool();
                }
            }
            else if (successCount > 0)
            {
                message = $"Enrolled in {successCount} course(s). Some failed: {string.Join("; ", errors)}";
                isError = true;
                selectedCourses.Clear();
                if (selectedSchoolId > 0)
                {
                    LoadCoursesForSchool();
                }
            }
            else
            {
                message = $"Enrollment failed: {string.Join("; ", errors)}";
                isError = true;
            }
        }
        catch (Exception ex)
        {
            message = $"Error during enrollment: {ex.Message}";
            isError = true;
        }
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo($"/enroll/{StudentId}");
    }
}

@page "/enroll/{StudentId:int}"
@using ZambeelApp.Services
@using ZambeelApp.Models
@inject IZambeelService SP_Service
@inject Service_LINQ LINQ_Service
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2> Course Enrollment</h2>
                <button class="btn btn-secondary" @onclick="@(() => NavigationManager.NavigateTo($"/student-home/{StudentId}"))">‚Üê Back to Dashboard</button>
            </div>
        </div>
    </div>

    <div class="alert alert-info">
        <label>
            <input type="checkbox" @bind="useLinq" @bind:after="OnLinqToggleChanged" /> 
            <strong>Use LINQ Implementation?</strong> (Current: @(useLinq ? "LINQ" : "Stored Procedures"))
        </label>
    </div>

    <div class="row">
        <!-- Semesters Section -->
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"> View Semesters</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Select a semester to view your courses and grades</p>
                    
                    <div class="mb-3">
                        <label class="form-label"><strong>Select Semester:</strong></label>
                        <select class="form-select" @bind="selectedSemester" @bind:after="LoadSemesterCourses">
                            <option value="">-- Select a Semester --</option>
                            @foreach (var semester in pastSemesters)
                            {
                                <option value="@semester">@semester</option>
                            }
                        </select>
                    </div>

                    @if (!string.IsNullOrEmpty(selectedSemester) && semesterCourses.Any())
                    {
                        <h6 class="mt-4">Courses in @selectedSemester</h6>
                        <table class="table table-striped table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>Course</th>
                                    <th>Credits</th>
                                    <th>Grade</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var course in semesterCourses)
                                {
                                    <tr class="@(selectedCourseId == course.CourseId ? "table-primary" : "")">
                                        <td>@course.CourseName</td>
                                        <td>@course.CreditHours</td>
                                        <td>@(course.Grade ?? "N/A")</td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary" @onclick="@(() => LoadCourseDetails(course.CourseId))">
                                                View Details
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else if (!string.IsNullOrEmpty(selectedSemester))
                    {
                        <div class="alert alert-warning mt-3">No courses found for this semester.</div>
                    }
                </div>
            </div>
        </div>
        
        <!-- Shopping Cart for Spring 2026 -->
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"> Spring 2026 Enrollment</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Browse and add courses for the upcoming semester</p>
                    <div class="alert alert-success">
                        <strong>Current Registration Period:</strong> Spring 2026
                    </div>
                    <button class="btn btn-primary btn-lg w-100 mt-3" @onclick="@(() => NavigationManager.NavigateTo($"/enroll/{StudentId}/shopping-cart"))">
                         Open Shopping Cart
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Course Details Section -->
    @if (courseDetails != null)
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Course Details: @courseDetails.CourseName (@courseDetails.Semester)</h5>
                        <button class="btn btn-sm btn-outline-light" @onclick="ClearCourseDetails">Close</button>
                    </div>
                    <div class="card-body">
                        <!-- Gradebook Section -->
                        <div class="accordion mb-3" id="courseDetailsAccordion">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingGradebook">
                                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseGradebook" aria-expanded="true" aria-controls="collapseGradebook">
                                        Gradebook
                                    </button>
                                </h2>
                                <div id="collapseGradebook" class="accordion-collapse collapse show" aria-labelledby="headingGradebook" data-bs-parent="#courseDetailsAccordion">
                                    <div class="accordion-body">
                                        @if (courseDetails.Gradebook != null)
                                        {
                                            <table class="table table-sm">
                                                <tbody>
                                                    <tr>
                                                        <td><strong>Exam Marks:</strong></td>
                                                        <td>@(courseDetails.Gradebook.ExamMarks?.ToString("F2") ?? "N/A")</td>
                                                    </tr>
                                                    <tr>
                                                        <td><strong>Quiz Marks:</strong></td>
                                                        <td>@(courseDetails.Gradebook.QuizMarks?.ToString("F2") ?? "N/A")</td>
                                                    </tr>
                                                    <tr>
                                                        <td><strong>Assignment Marks:</strong></td>
                                                        <td>@(courseDetails.Gradebook.AssignmentMarks?.ToString("F2") ?? "N/A")</td>
                                                    </tr>
                                                    <tr>
                                                        <td><strong>Project Marks:</strong></td>
                                                        <td>@(courseDetails.Gradebook.ProjectMarks?.ToString("F2") ?? "N/A")</td>
                                                    </tr>
                                                    <tr>
                                                        <td><strong>Attendance:</strong></td>
                                                        <td>@(courseDetails.Gradebook.AttendancePercent?.ToString("F1") ?? "N/A")</td>
                                                    </tr>
                                                    <tr class="table-warning">
                                                        <td><strong>Final Grade:</strong></td>
                                                        <td><strong>@(courseDetails.Gradebook.LetterGrade ?? "N/A")</strong></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        }
                                        else
                                        {
                                            <div class="alert alert-secondary">No gradebook data available.</div>
                                        }
                                    </div>
                                </div>
                            </div>

                            <!-- Final Schedule Section -->
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingSchedule">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSchedule" aria-expanded="false" aria-controls="collapseSchedule">
                                        Final Exam Schedule
                                    </button>
                                </h2>
                                <div id="collapseSchedule" class="accordion-collapse collapse" aria-labelledby="headingSchedule" data-bs-parent="#courseDetailsAccordion">
                                    <div class="accordion-body">
                                        @if (courseDetails.FinalSchedule != null)
                                        {
                                            <table class="table table-sm">
                                                <tbody>
                                                    <tr>
                                                        <td><strong>Exam Date:</strong></td>
                                                        <td>@(courseDetails.FinalSchedule.ExamDate?.ToString("MMMM dd, yyyy") ?? "TBA")</td>
                                                    </tr>
                                                    <tr>
                                                        <td><strong>Exam Time:</strong></td>
                                                        <td>@(courseDetails.FinalSchedule.ExamTime?.ToString("hh:mm tt") ?? "TBA")</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        }
                                        else
                                        {
                                            <div class="alert alert-secondary">No final exam schedule available.</div>
                                        }
                                    </div>
                                </div>
                            </div>

                            <!-- Roster Section -->
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingRoster">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseRoster" aria-expanded="false" aria-controls="collapseRoster">
                                        Class Roster
                                    </button>
                                </h2>
                                <div id="collapseRoster" class="accordion-collapse collapse" aria-labelledby="headingRoster" data-bs-parent="#courseDetailsAccordion">
                                    <div class="accordion-body">
                                        @if (courseDetails.Roster != null)
                                        {
                                            <div class="mb-3">
                                                <span class="badge bg-primary fs-6">Total Students: @courseDetails.Roster.NumStudents</span>
                                            </div>
                                            @if (!string.IsNullOrEmpty(courseDetails.Roster.RosterList))
                                            {
                                                <div class="border rounded p-3 bg-light" style="max-height: 200px; overflow-y: auto;">
                                                    <small class="text-muted">@courseDetails.Roster.RosterList</small>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="alert alert-secondary">Roster details not available.</div>
                                            }
                                        }
                                        else
                                        {
                                            <div class="alert alert-secondary">No roster data available for this semester.</div>
                                        }
                                    </div>
                                </div>
                            </div>
                        <!-- Assignments Section -->
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingAssignments">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAssignments" aria-expanded="false" aria-controls="collapseAssignments">
                                    Assignments
                                </button>
                            </h2>
                            <div id="collapseAssignments" class="accordion-collapse collapse" aria-labelledby="headingAssignments" data-bs-parent="#courseDetailsAccordion">
                                <div class="accordion-body">
                                    @if (courseDetails.Assignments.Any())
                                    {
                                        <div class="table-responsive">
                                            <table class="table table-striped table-sm">
                                                <thead class="table-dark">
                                                    <tr>
                                                        <th>Assignment</th>
                                                        <th>Open Date</th>
                                                        <th>Due Date</th>
                                                        <th>Marks</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var assignment in courseDetails.Assignments)
                                                    {
                                                        <tr>
                                                            <td>@assignment.Name</td>
                                                            <td>@(assignment.OpenDate?.ToString("MMM dd") ?? "N/A")</td>
                                                            <td>@(assignment.DueDate?.ToString("MMM dd") ?? "N/A")</td>
                                                            <td>@(assignment.Marks?.ToString() ?? "N/A")</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-secondary">No assignments available for this course.</div>
                                    }
                                </div>
                            </div>
                        </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int StudentId { get; set; }

    private bool useLinq = false;
    private List<string> pastSemesters = new();
    private string selectedSemester = "";
    private List<SemesterCourseDTO> semesterCourses = new();
    private int? selectedCourseId = null;
    private CourseDetailDTO? courseDetails = null;

    protected override void OnInitialized()
    {
        LoadPastSemesters();
    }

    private void LoadPastSemesters()
    {
        try
        {
            IZambeelService activeService = useLinq ? (IZambeelService)LINQ_Service : SP_Service;
            var allSemesters = activeService.GetStudentSemesters(StudentId);
            
            // Include all semesters (including Spring 2026 for current enrollment)
            pastSemesters = allSemesters
                .Where(s => !string.IsNullOrEmpty(s))
                .OrderByDescending(s => GetSemesterSortKey(s))
                .ToList();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading semesters: {ex.Message}");
            pastSemesters = new List<string>();
        }
    }

    private bool IsPastSemester(string semester)
    {
        // Parse semester string (e.g., "Fall 2025", "Spring 2024")
        var parts = semester.Split(' ');
        if (parts.Length != 2) return true; // Include if can't parse
        
        if (!int.TryParse(parts[1], out int year)) return true;
        
        var term = parts[0].ToLower();
        
        // Spring 2026 is current, so anything before that is past
        if (year < 2026) return true;
        if (year == 2026 && term == "spring") return false; // Current semester
        if (year == 2025) return true; // Fall 2025 and before are past
        
        return year <= 2025;
    }

    private int GetSemesterSortKey(string semester)
    {
        var parts = semester.Split(' ');
        if (parts.Length != 2) return 0;
        
        if (!int.TryParse(parts[1], out int year)) return 0;
        
        var term = parts[0].ToLower();
        int termValue = term switch
        {
            "spring" => 1,
            "summer" => 2,
            "fall" => 3,
            _ => 0
        };
        
        return year * 10 + termValue;
    }

    private void LoadSemesterCourses()
    {
        // Clear course details when changing semester
        selectedCourseId = null;
        courseDetails = null;

        if (string.IsNullOrEmpty(selectedSemester))
        {
            semesterCourses = new List<SemesterCourseDTO>();
            return;
        }

        try
        {
            IZambeelService activeService = useLinq ? (IZambeelService)LINQ_Service : SP_Service;
            semesterCourses = activeService.GetSemesterCourses(StudentId, selectedSemester);
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading courses: {ex.Message}");
            semesterCourses = new List<SemesterCourseDTO>();
        }
    }

    private void LoadCourseDetails(int courseId)
    {
        try
        {
            selectedCourseId = courseId;
            IZambeelService activeService = useLinq ? (IZambeelService)LINQ_Service : SP_Service;
            courseDetails = activeService.GetCourseDetails(StudentId, courseId, selectedSemester);
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading course details: {ex.Message}");
            courseDetails = null;
        }
    }

    private void ClearCourseDetails()
    {
        selectedCourseId = null;
        courseDetails = null;
    }

    private void OnLinqToggleChanged()
    {
        LoadPastSemesters();
        if (!string.IsNullOrEmpty(selectedSemester))
        {
            LoadSemesterCourses();
            if (selectedCourseId.HasValue)
            {
                LoadCourseDetails(selectedCourseId.Value);
            }
        }
    }
}
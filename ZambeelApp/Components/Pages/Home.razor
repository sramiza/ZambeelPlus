@page "/"
@using ZambeelApp.Services
@using ZambeelApp.Models
@inject IZambeelService SP_Service
@inject Service_LINQ LINQ_Service
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card" style="width: 400px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
        <div class="card-body">
            <h3 class="card-title text-center mb-4"> Student Portal</h3>
            
            <div class="mb-3">
                <label class="form-label">Student ID:</label>
                <input type="number" class="form-control" @bind="studentId" placeholder="Enter your student ID" />
            </div>

            <div class="mb-3">
                <label class="form-label">Password:</label>
                <input type="password" class="form-control" @bind="password" placeholder="Enter your password" />
            </div>

            <div class="mb-3">
                <label>
                    <input type="checkbox" @bind="useLinq" /> 
                    <small>Use LINQ (otherwise Stored Procedures)</small>
                </label>
            </div>

            <button class="btn btn-primary w-100" @onclick="HandleSignIn">Sign In</button>

            @if (!string.IsNullOrEmpty(message))
            {
                <div class="mt-3 alert @(isError ? "alert-danger" : "alert-success")">
                    @message
                </div>
            }
        </div>
    </div>
</div>

@code {
    private int studentId;
    private string password = "";
    private bool useLinq = false;
    private string message = "";
    private bool isError = false;

    private void HandleSignIn()
    {
        if (studentId == 0 || string.IsNullOrEmpty(password))
        {
            message = "Please enter both Student ID and Password.";
            isError = true;
            return;
        }

        IZambeelService activeService = useLinq ? (IZambeelService)LINQ_Service : SP_Service;
        var student = activeService.ValidateStudentLogin(studentId, password);

        if (student != null)
        {
            isError = false;
            message = $"Welcome, {student.Name}!";
            // Store student info in session and navigate
            Task.Delay(1000).ContinueWith(_ => 
            {
                NavigationManager.NavigateTo($"/student-home/{student.StudentId}");
            });
        }
        else
        {
            isError = true;
            message = "Invalid Student ID or Password.";
        }
    }
}
